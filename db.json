{
  "burgers": [
    {
      "id": "classic-burger",
      "title": "Classic Burger",
      "steps": [
        {
          "id": "step1",
          "type": "multiple-choice",
          "instruction": "Pick your bun",
          "options": ["Sesame", "Brioche", "Lettuce Wrap"]
        },
        {
          "id": "step2",
          "type": "multiple-choice",
         "instruction": "What kind of protein?",
          "options": ["Beef", "Chicken", "Turkey"]
        },
         {
          "id": "step3",
          "type": "text",
          "instruction": "How many sauce servings?",
          "feedback": {
            "condition": "amount>3",
            "message": "Too much sauce might overpower the flavor!"
          }
         },
        {
          "id": "step4",
          "type": "multiple-choice",
          "instruction": "Choose sauce",
          "options": ["Ketchup", "Mayo", "Spicy Chipotle"],
          "feedback":{
            "condition":"choice === 'Spicy Chipotle' && selections.includes('Brioche')",
            "message": "Spicy Chipotle with a Brioche is a horrible combo!"
          }
        },
        {
          "id": "step5",
          "type": "multiple-choice",
          "instruction": "Choose extras",
          "options": ["Cheese", "Bacon", "Double Patty"]
        }
      ]
    },
    {
      "id": "krabby-patty",
      "title": "Krabby Patty",
      "steps": [
        {
          "id": "step1",
          "type": "multiple-choice",
          "instruction": "Pick your bun",
          "options": ["Sesame", "Brioche", "Lettuce Wrap"]
        },
        {
          "id": "step2",
          "type": "multiple-choice",
          "instruction": "What kind of protein?",
          "options": ["Crab", "Veggie Patty"]
        },
        {
           "id": "step3",
          "type": "text",
          "instruction": "How many sauce servings?",
          "feedback": {
            "condition": "amount>3",
            "message": "Too much sauce might make your Krabby Patty soggy!"
          }
        },
        {
          "id": "step4",
          "type": "multiple-choice",
          "instruction": "Choose sauce",
          "options": ["Mayo", "Ranch", "Ketchup"],
           "feedback":{
            "condition":"choice === 'Ranch' && selections.includes('Crab')",
            "message": "Ew, ranch on a Krabby Patty? Do better!"
          }
        },
        {
          "id": "step5",
          "type": "multiple-choice",
          "instruction": "Extras",
          "options": ["Cheese", "Bacon"]
        }
      ]
    }
  ]
}

